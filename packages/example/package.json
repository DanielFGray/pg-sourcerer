{
  "name": "pgsourcerer-demo",
  "license": "Unlicense",
  "private": true,
  "type": "module",
  "scripts": {
    "generate": "bun ../pg-sourcerer/src/cli.ts generate --log-level debug",
    "generate:dry": "bun ../pg-sourcerer/src/cli.ts generate --log-level debug --dry-run",
    "dev": "bun run-p db:watch generate:watch",
    "generate:watch": "bun --watch ../pg-sourcerer/src/cli.ts generate --log-level debug",
    "predev": "bun db:ensure",
    "gm": "bun node_modules/.bin/graphile-migrate",
    "db:ensure": "bun scripts/dbEnsure.ts",
    "db:setup": "bun scripts/dbSetup.ts",
    "db:latest": "bun node_modules/.bin/graphile-migrate watch --once",
    "db:watch": "bun node_modules/.bin/graphile-migrate watch",
    "db:reset": "bun node_modules/.bin/graphile-migrate reset --erase",
    "db:start": "docker-compose up -d db",
    "db:stop": "docker-compose stop db",
    "db:exec": "docker-compose exec db",
    "db:init": "run-s db:start db:setup db:reset db:latest",
    "env:init": "bun scripts/generateEnvFile.ts",
    "init": "NOCONFIRM=1 run-s -s env:init db:init"
  },
  "dependencies": {
    "@danielfgray/pg-sourcerer": "workspace:*",
    "@effect/platform": "catalog:",
    "@effect/platform-bun": "^0.87.0",
    "@effect/platform-node": "catalog:",
    "effect": "catalog:",
    "graphile-migrate": "next",
    "inquirer": "^9.2.12",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "prettier": "^3.2.4",
    "typescript": "catalog:"
  }
}
