{
  "name": "@danielfgray/pg-sourcerer",
  "version": "0.5.1",
  "description": "PostgreSQL code generation framework with a plugin ecosystem",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./plugins": {
      "types": "./dist/plugins/index.d.ts",
      "import": "./dist/plugins/index.js"
    },
    "./plugins/*": {
      "types": "./dist/plugins/*.d.ts",
      "import": "./dist/plugins/*.js"
    }
  },
  "bin": {
    "pgsourcerer": "bin/pgsourcerer"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "bun run clean",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build",
    "test": "vitest run",
    "test:all": "bun --env-file=../example/.env vitest run --config vitest.all.config.ts",
    "test:unit": "vitest run",
    "test:integration": "bun --env-file=../example/.env vitest run --config vitest.integration.config.ts",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "postgresql",
    "postgres",
    "codegen",
    "code-generation",
    "typescript",
    "introspection"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/DanielFGray/pg-sourcerer.git",
    "directory": "packages/pg-sourcerer"
  },
  "license": "MIT",
  "author": "Daniel Gray",
  "dependencies": {
    "@babel/parser": "^7.28.6",
    "@danielfgray/pg-introspection": "workspace:*",
    "@effect/cli": "catalog:",
    "@effect/platform": "catalog:",
    "@effect/platform-node": "catalog:",
    "effect": "catalog:",
    "lilconfig": "^3.1.3",
    "pg": "catalog:",
    "pluralize-esm": "^9.0.5",
    "postgres": "catalog:",
    "recast": "^0.23.11"
  },
  "devDependencies": {
    "@effect/vitest": "catalog:",
    "@opentui/core": "^0.1.73",
    "@types/bun": "^1.3.6",
    "@types/pg": "catalog:",
    "@vitest/coverage-v8": "3.2.4",
    "ast-types": "^0.16.1",
    "bun-types": "^1.3.6",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
